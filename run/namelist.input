&timing ! and output
  dt              = 3600.0   ! timestep [seconds]
  maxtime         = 36       ! total simulation time [hours]
  output_filename = "output_snf_5.nc"
/

&forcing
  rain_duration = 3        ! duration of rain events [hours]
  dry_duration  = 3        ! duration of no-rain events [hours]
  raining       = .true.   ! start with rain
  prate_conv    = 5.2      ! convective precipitation entering  [mm/s]
  prate_nconv   = 5.1      ! non-convective precipitation entering [mm/s]
  prate_shalw   = 3.2      ! shallow convective precip entering  [mm/s]
  prate_snow    = 3.1      ! snow entering land model [mm/s]  
  prate_grup    = 2.4      ! graupel entering land model [mm/s]    
  prate_hail    = 2.5      ! hail entering land model [mm/s]
  pres_sfc      = 900.0    ! pressure (pa)
  spec_humd     = 0.002    ! mixing ratio (kg/kg)
  zenith        = 0.32     ! cosine solar zenith angle [0-1]
  t2max         = 305.0    ! max, surface air temperature [k]
  t2min         = 285.0    ! min, surface air temperature [k]
  sradmax       = 550.0    ! max, downward shortwave radiation (w/m2)
  sradmin       = 0.0      ! min, downward shortwave radiation (w/m2)
/

&options
  iopt_snf      = 5
/
